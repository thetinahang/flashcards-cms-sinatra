<h1>Edit your Stack:</h1>

<h3><%=@stack.title%></h3>
<form action="/stacks/<%= @stack.id%>" method="post">
	<input id="hidden" type="hidden" name="_method" value="patch">
	<input type="text" name="title" value="<%=@stack.title%>">
	<input type="submit" id="submit" value="Submit">
</form>

<form action="/stacks/<%=@stack.id%>/delete" method="post">
	<input type="submit" value="Delete Stack">
</form>


